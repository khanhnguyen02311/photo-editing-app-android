<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:paddingTop="15dp"
    android:paddingBottom="5dp"
    tools:context=".Activity_Design.ControllerView.TransformController">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cropRatioRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:paddingHorizontal="10dp"
        android:clipToPadding="false"
        android:orientation="horizontal"/>

    <FrameLayout
        android:id="@+id/slider_pack1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/slider_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotation"
            android:textSize="15sp"
            android:layout_marginStart="15dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/slider1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:valueFrom="-180.0"
            android:valueTo="180.0"
            android:value="0.0"
            app:thumbRadius="8dp"
            app:trackColor="#ACE5FF"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/confirmBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@null"
            android:src="@drawable/ic_tick_circle"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/cancelBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@null"
            android:src="@drawable/ic_close_circle"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|start"
            android:foregroundGravity="center"
            android:layout_marginStart="10dp"/>


        <TextView
            android:id="@+id/adjust_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:text="TRANSFORM"
            android:layout_gravity="center"/>

    </FrameLayout>

</LinearLayout>